/**
     * getForeignSortOrderSQL - gets sort order SQL of a related property type
     *
     * @param propertyName [String][in]: Related property name, property name must be
     * in the following format: a:property/sub_property
     * @param selectSQL [String][in, out]: SQL select statement
     * @param sortOrderSQL [String][in, out]: SQL sort order statement
     *
     * @return if property specified by propertyName is a foreign property returns modified
     * selectSQL and sortOrderSQL as variable, method returns void.
     */
	public function getForeignSortOrderSQL($propertyName, &$selectSQL, &$sortOrderSQL) {

		$ascending = false;
		$sortingToken = $propertyName[0];
		$sortingToken .= $propertyName[1];

		if ($sortingToken == 'a:') {
			$ascending = true;
		} else if ($sortingToken == 'd:') {
			$ascending = false;
		} // if ($sortingToken == 'a:') {

		$propertyName = substr($propertyName, 2);
		$propertyNameTokens = explode('/', $propertyName);

		if (!isset($propertyNameTokens[1])) {
			return;
		} // if (!isset($propertyNameTokens[1])) {

		$foreignSortOrderSQL = '';
		$foreignTableName = '';
		$foreignTableIndex = '';
		$foreignSelectSQL = '';

		switch ($propertyNameTokens[0]) {

{{MODEL{{$ ../../../__item_index__/__value__}}_FOREIGN_SORT_ORDER_SQL}}
			default:
			break;

		} // switch ($propertyNameTokens[0]) {

		if ($foreignSortOrderSQL != '') {
			if ($ascending) {
				$foreignSortOrderSQL .= ' ASC';
			} else {
				$foreignSortOrderSQL .= ' DESC';
			} // if ($ascending) {
		} // if ($foreignSortOrderSQL != '') {

		$selectSQL .= $foreignSelectSQL;
		$sortOrderSQL .= $foreignSortOrderSQL;

		return;

	}